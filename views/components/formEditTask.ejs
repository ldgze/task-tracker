<h2>Task</h2>

<form
  action=" <%= '/tasks/' + task.taskID + '/edit' %>"
  method="POST"
>

  <div>
    <label class="form-label">
      Task ID:
      <input
        class="form-control"
        type="text"
        name="taskID"
        value="<%= task.taskID %>"
        disabled
      />
    </label>
  </div>
  
  <div>
    <label class="form-label">
      Title:
      <input
        class="form-control"
        type="text"
        name="title"
        value="<%= task.title %>"
      />
    </label>
  </div>

  <div>
    <label class="form-label">
      Due Date:
      <input
        class="form-control"
        type="text"
        name="dueDate"
        value="<%= task.dueDate %>"
      />
    </label>
  </div>

  <button type="submit" class="btn btn-primary">Edit</button>
  <a
    class="btn btn-danger"
    href="<%= '/tasks/' + task.taskID + '/delete' %>"
    >Delete</a
  >
</form>
